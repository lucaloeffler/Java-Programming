public class Aufgabe1 {
	public static void main(String[]args) {
		int zahl1 = 0;
		int zahl2 = 0;
		int zahl3 = 0;
		int summe = 0;
		int product = 0;
		
		 
		
		System.out.println("Bitte geben sie drei Zahlen ein: ");
		System.out.println("1. Zahl: ");
			zahl1 = Tools.intEingabe();
		System.out.println("Und die 2. Zahl: ");
			zahl2 = Tools.intEingabe();
		System.out.println("Und die 3. Zahl: ");
			zahl3 = Tools.intEingabe();
		
		summe = zahl1 + zahl2 + zahl3; 
		product = zahl1 * zahl2 * zahl3;
			
		System.out.println("Die Summe ist: " +summe);
		System.out.println("Das Produkt ist: " +product);
	}
}
